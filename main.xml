<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/layout">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send parcel"
            android:id="@+id/Sendparcel" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK PARCEL"
            android:id="@+id/CheckParcel" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pricing details"
            android:id="@+id/pricebuttonid" android:layout_gravity="center_horizontal"/>
</LinearLayout>

